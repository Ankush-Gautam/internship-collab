@model IEnumerable<ProductApp.ViewModels.StudentVm>;

@{
    ViewData["Title"] = "Student App";
}

<h2 class="display-5">List of Students</h2>

<a asp-action="Create" class="btn btn-primary shadow my-4">Add New Student</a>

<table class="table table-striped border">
    <thead>
    <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Address</td>
        <td>Actions</td>
    </tr>
    </thead>

    <tbody>
    @{
        foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id"
                       class="btn-sm btn-warning text-decoration-none">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn-sm btn-danger text-decoration-none">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>