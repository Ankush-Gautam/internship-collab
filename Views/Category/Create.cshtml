@model CategoryVm

@{
    ViewBag.Title = "Add Category";
    Layout = "_Layout";
}

<div class="container my-5">
    <form method="post" class="shadow p-4 rounded bg-light" novalidate>
    <h2 class="text-center mb-4">@ViewBag.Title</h2>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter category name" required />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>
